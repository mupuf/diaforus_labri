<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE network SYSTEM '../network.dtd'>
<network failure_handling="false" pubsub_reliable="true">
    <build>
        <!--	path: filepath to the make binary (optional)
			args: parameters you can specify for make (optional)
			root: the directory that contains the Makefile
			output: the binary file generated by the project
		-->
        <make output="diaforus_final_code" root="build/" target="host" args="-j8"/>
        <make output="diaforus_final_code.jtag.s3" root="Debug/" target="aps3" args="-j1"/>
        <debug pubsub="true" uip="false" sicslowpan="false" rpl="false" wavesim="false" coap="false" reasoning="true"/>
        <application name="REASONING"/>
    </build>
    <coap_groups>
        <group name="reasoning1">
            <resource name="intrusion_duration"/>
            <resource name="latency_mode"/>
        </group>
        <group name="reasoning2">
            <resource name="hist_analyze_per"/>
            <resource name="criticality_lvl"/>
            <resource name="history"/>
            <resource name="alert_alarm_ratio"/>
        </group>
        <group name="rpl">
            <resource name="rpl_neighbors"/>
            <resource name="rpl_rank"/>
            <resource name="rpl_num_routes"/>
            <resource name="rpl_num_tra_mess"/>
            <resource name="rpl_num_rec_mess"/>
        </group>
        <group name="allnodes">
            <resource name="num_tra_packets"/>
            <resource name="num_rec_packets"/>
            <resource name="nodeid"/>
        </group>
    </coap_groups>
    <!-- Zone 1 -->
    <node target="host" simulation="true" id="1" area="1" name="node root reasoning 1">
        <emblem source="c2.png"/>
        <firmware name="node_1"/>
        <phy x="1065" y="814" range="900"/>
        <energy startup="1600" alarm="100"/>
        <rpl prefix="1180:0000:0000:0000"/>
        <pubsub enable="true" broker="true"/>
        <coap enable="true">
            <group name="reasoning2"/>
            <group name="rpl"/>
            <group name="allnodes"/>
        </coap>
        <gateway port="1235"/>
        <!-- The parameters to control the reasoning (level 1 and level 2) -->
        <reasoning latency_mode="orange" max_intrusion_duration="20" min_intrusion_duration="2">
            <!-- This node is the reasoning node -->
            <reasoning_node log_analyse_period="1440"/>
            <!-- in minutes -->
            <monitored_area area="1" average_crossing_duration="10"/>
        </reasoning>
        <sensors/>
    </node>
    <node target="aps3" simulation="false" id="2" area="1" name="node seismic 1-1">
        <firmware name="node_2.jtag.s3"/>
        <phy x="1000" y="597" range="900"/>
        <energy startup="1600" alarm="100"/>
        <pubsub enable="true"/>
        <coap enable="true">
            <group name="reasoning1"/>
            <group name="rpl"/>
            <group name="allnodes"/>
        </coap>
        <reasoning latency_mode="orange" max_intrusion_duration="20" min_intrusion_duration="2"/>
        <sensors>
            <modality type="SEISMIC">
                <sensor period="200" reemission_delay="5001" type="digital" id="0" delay="0">
                    <gpio pin="3"/>
                    <value abs_threshold="1" rel_threshold="1" invert="true"/>
                    <position x="928" y="566" z_rotation="0"/>
                </sensor>
            </modality>
        </sensors>
    </node>
    <node target="aps3" simulation="false" id="3" area="1" name="node pir 1-1">
        <firmware name="node_3.jtag.s3"/>
        <phy x="1057" y="651" range="900"/>
        <energy startup="1600" alarm="100"/>
        <pubsub enable="true"/>
        <coap enable="true">
            <group name="reasoning1"/>
            <group name="rpl"/>
            <group name="allnodes"/>
        </coap>
        <reasoning latency_mode="orange" max_intrusion_duration="20" min_intrusion_duration="2"/>
        <sensors>
            <modality type="PIR">
                <sensor period="200" reemission_delay="3001" type="digital" id="0" delay="0">
                    <gpio pin="2"/>
                    <value abs_threshold="1" rel_threshold="1" invert="false"/>
                    <position x="977" y="671" z_rotation="160"/>
                </sensor>
            </modality>
        </sensors>
    </node>
    <!-- Zone 2-->
    <node target="host" simulation="true" id="20" area="2" name="node root reasoning 2">
        <firmware name="node_20"/>
        <phy x="883" y="414" range="900"/>
        <energy startup="1600" alarm="100"/>
        <pubsub enable="true"/>
        <coap enable="true">
            <group name="reasoning2"/>
            <group name="rpl"/>
            <group name="allnodes"/>
        </coap>
        <!-- The parameters to control the reasoning (level 1 and level 2) -->
        <reasoning latency_mode="orange" max_intrusion_duration="25" min_intrusion_duration="2">
            <!-- This node is the reasoning node -->
            <reasoning_node log_analyse_period="1440"/>
            <!-- in minutes -->
            <monitored_area area="1" average_crossing_duration="10"/>
        </reasoning>
        <sensors/>
    </node>
    <node target="aps3" simulation="false" id="21" area="2" name="node seismic 1-2">
        <firmware name="node_21.jtag.s3"/>
        <phy x="792" y="404" range="900"/>
        <energy startup="1600" alarm="100"/>
        <pubsub enable="true"/>
        <coap enable="true">
            <group name="reasoning1"/>
            <group name="rpl"/>
            <group name="allnodes"/>
        </coap>
        <reasoning latency_mode="orange" max_intrusion_duration="25" min_intrusion_duration="2"/>
        <sensors>
            <modality type="SEISMIC">
                <sensor period="200" reemission_delay="5001" type="digital" id="0" delay="0">
                    <gpio pin="3"/>
                    <value abs_threshold="1" rel_threshold="1" invert="true"/>
                    <position x="663" y="434" z_rotation="0"/>
                </sensor>
            </modality>
        </sensors>
    </node>
    <node target="aps3" simulation="false" id="22" area="2" name="node pir 1-2">
        <firmware name="node_22.jtag.s3"/>
        <phy x="710" y="454" range="900"/>
        <energy startup="1600" alarm="100"/>
        <pubsub enable="true"/>
        <coap enable="true">
            <group name="reasoning1"/>
            <group name="rpl"/>
            <group name="allnodes"/>
        </coap>
        <reasoning latency_mode="orange" max_intrusion_duration="25" min_intrusion_duration="2"/>
        <sensors>
            <modality type="PIR">
                <sensor period="100" reemission_delay="3001" type="digital" id="0" delay="0">
                    <gpio pin="2"/>
                    <value abs_threshold="1" rel_threshold="1" invert="false"/>
                    <position x="764" y="456" z_rotation="80"/>
                </sensor>
            </modality>
        </sensors>
    </node>
</network>
